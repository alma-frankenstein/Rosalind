#with open(filename) as file_object:
#    dna = file_object.read()

dna = 'ATATCG' 

#an empty string for the compliment nucleotides to append to 
comple = ""

for i in dna:
    if i == 'A':
        comple = comple + 'T'
    elif i == 'C':
        comple = comple + 'G'
    elif i == 'T':
        comple = comple + 'A'
    elif i == 'G':
        comple = comple + 'C'

print(comple)
    
#change the dna string and its compliment string to lists for index checking
dnaLst = list(dna)
print(dnaLst)
compleLst = list(comple)
print(compleLst)

#indexer starts with the first nucleotide at index 0
indexer = 0


#start with the first nucleotide, work backward to check for matches
def backward_checking(complement):
    reverseIndexer = -1
    reverseCounter = 0
    while reverseCounter < len(dna):
        if dnaLst[indexer] == compleLst[reverseIndexer]:
            print('yeah')
            reverseIndexer = reverseIndexer -1
            reverseCounter = reverseCounter + 1
        else:
            print('nah')
            reverseIndexer = reverseIndexer -1
            reverseCounter = reverseCounter + 1
    #if you get 4-12 'yeah's, print the location (reverseCounter?) and length

#reverse check for each nucleotide
for i in dnaLst:
    backward_checking(compleLst)
    indexer += 1
    
print(indexer)
print(compleLst[-1])
print(reverseIndexer)
