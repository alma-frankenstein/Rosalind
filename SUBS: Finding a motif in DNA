import re

filename = 'rosalind_subs.txt'
with open(filename) as file_ob:
    sentence = file_ob.read()

#sentence = "GATATATGCATATACTT"
#lookahead in regex for overlapping matches:
word = "(?=TCCTCGATC)"

locations = ""
for match in re.finditer(word, sentence):
    #add 1 to index for location
    out = (match.start() + 1) 
    #make it a string so it can append to the 'locations' string
    y = str(out)
    locations = locations + y + " "
print(locations)
